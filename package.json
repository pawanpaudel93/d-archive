{
  "name": "darchive",
  "version": "0.0.1",
  "description": "create-web3 monorepo quickstart with next and hardhat",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "yarn workspace frontend dev",
    "build": "yarn workspace frontend build",
    "start": "yarn workspace frontend start",
